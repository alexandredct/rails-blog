<% #@see  https://guides.rubyonrails.org/layouts_and_rendering.html#using-partials %>

<% #@see https://guides.rubyonrails.org/form_helpers.html %>
<%= form_with model: article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% #The "full_messages_for" method returns an array of user-friendly error messages for a specified attribute. If there are no errors for that attribute, the array will be empty. %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
